<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<modded_inputs>
    <inputs>
        <actions>
            <input name="CopyCommand" loc="Copy"/>
            <input name="CutCommand" loc="Cut"/>
            <input name="DeleteCommand" loc="Delete"/>
            <input name="LockCommand" loc="Lock"/>
            <input name="NewCommand" loc="New File"/>
            <input name="OpenCommand" loc="Open File"/>
            <input name="PasteCommand" loc="Paste"/>
            <input name="RedoCommand" loc="Redo"/>
            <input name="SaveAsCommand" loc="SaveAs"/>
            <input name="SaveCommand" loc="Save File"/>
            <input name="UndoCommand" loc="Undo"/>
            <input name="UnlockCommand" loc="Unlock"/>
            <input name="CursorToggleCommand" loc="Toggle Cursor"/>
        </actions>
        
        <sorting name="Editor" loc="EDITOR">
            <input name="CopyCommand"/>
            <input name="CutCommand"/>
            <input name="DeleteCommand"/>
            <input name="LockCommand"/>
            <input name="NewCommand"/>
            <input name="OpenCommand"/>
            <input name="PasteCommand"/>
            <input name="RedoCommand"/>
            <input name="SaveAsCommand"/>
            <input name="SaveCommand"/>
            <input name="UndoCommand"/>
            <input name="UnlockCommand"/>
            <input name="CursorToggleCommand"/>
        </sorting>
    </inputs>

    <preset>
        <input name="CopyCommand">
            <btn name="kLControl">
                <btn name="kC"/>
            </btn>
        </input>
        <input name="CutCommand">
            <btn name="kLControl">
                <btn name="kX"/>
            </btn>
        </input>
        <input name="DeleteCommand">
            <btn name="kDelete"/>
        </input>
        <input name="LockCommand">
            <btn name="kLControl">
                <btn name="kL"/>
            </btn>
        </input>
        <input name="NewCommand">
            <btn name="kLControl">
                <btn name="kN"/>
            </btn>
        </input>
        <input name="OpenCommand">
            <btn name="kLControl">
                <btn name="kO"/>
            </btn>
        </input>
        <input name="PasteCommand">
            <btn name="kLControl">
                <btn name="kV"/>
            </btn>
        </input>
        <input name="RedoCommand">
            <btn name="kLControl">
                <btn name="kY"/>
            </btn>
        </input>
        <input name="SaveAsCommand">
            <btn name="kLControl" >
                <event name="hold" />
            </btn>
            <btn name="kLShift">
                <btn name="kS"/>
            </btn>
        </input>
        <input name="SaveCommand">
            <btn name="kLControl">
                <btn name="kS"/>
            </btn>
        </input>
        <input name="UndoCommand">
            <btn name="kLControl">
                <btn name="kZ"/>
            </btn>
        </input>
        <input name="UnlockCommand">
            <btn name="kLControl">
                <btn name="kL"/>
            </btn>
        </input>
        <input name="CursorToggleCommand">
            <btn name="kSpace"/>
        </input>
    </preset>
</modded_inputs>